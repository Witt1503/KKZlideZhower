<Window x:Class="KKZlideZhower.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KKZlideZhower"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300">
    <DockPanel>
      <Label DockPanel.Dock="Top" Name="Path_txt">Default path - Absolute</Label>
      <TextBox DockPanel.Dock="Top" Name="Path_input"></TextBox>
      <Label DockPanel.Dock="Top" Name="DisplayTime_txt">Display Time</Label>
      <TextBox DockPanel.Dock="Top" Name="DisplayTime_input"></TextBox>
      <DockPanel DockPanel.Dock="Top" Name="Buttons">
        <Button DockPanel.Dock="Left" Name="Btn_Save">Save</Button>
        <Button DockPanel.Dock="Left" Name="Btn_Cancel">Cancel</Button>
        <Button DockPanel.Dock="Left" Name="Btn_Start">Start</Button>
      </DockPanel>
      <Label DockPanel.Dock="Top"></Label>
  </DockPanel>
</Window>
